<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mywechat">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyWeChat"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ChatActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".UserActivity"
            android:theme="@style/Theme.MyWeChat" />
        <activity
            android:name=".NewDiscoverActivity"
            android:theme="@style/Theme.MyWeChat" />
        <activity
            android:name=".InfoActivity"
            android:theme="@style/Theme.MyWeChat" />
        <activity
            android:name=".FriendActivity"
            android:theme="@style/Theme.MyWeChat" />
        <activity
            android:name=".Activities.NewFriend.NewFriendActivity"
            android:theme="@style/Theme.MyWeChat" />
        <activity
            android:name=".Activities.NewFriend.FriendApplyActivity"
            android:theme="@style/Theme.MyWeChat" />
        <activity
            android:name=".Activities.NewFriend.SendFriendApplyActivity"
            android:theme="@style/Theme.MyWeChat" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyWeChat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>